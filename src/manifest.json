{
  "manifest_version": 2,
  "name": "EC Detector",
  "version": "0.0.1",
  "author": "howdy39",
  "description": "__MSG_extension_description__",
  "default_locale": "ja",
  "browser_action": {
    "default_popup": "html/popup.html"
  },
  "icons": {
    "16": "icons/ecdetector_128.png",
    "48": "icons/ecdetector_128.png",
    "128": "icons/ecdetector_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "<all_urls>"
  ]
}
